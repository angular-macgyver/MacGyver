extends layout

block append content
  .row.content
    #nav.span3
      ul.nav.nav-list.docs-sidenav(data-spy="affix", data-offset-top="0")
        li(mac-scroll-spy-target="element"): a(href="#element")
          i.icon-chevron-right
          | Angular element
        li(mac-scroll-spy-target="pluralize"): a(href="#pluralize")
          i.icon-chevron-right
          | Pluralize
        li(mac-scroll-spy-target="capitalize"): a(href="#capitalize")
          i.icon-chevron-right
          | Capitalize
        li(mac-scroll-spy-target="uncapitalize"): a(href="#uncapitalize")
          i.icon-chevron-right
          | Uncapitalize
        li(mac-scroll-spy-target="toCamelCase"): a(href="#toCamelCase")
          i.icon-chevron-right
          | toCamelCase
        li(mac-scroll-spy-target="toSnakeCase"): a(href="#toSnakeCase")
          i.icon-chevron-right
          | toSnakeCase
        li(mac-scroll-spy-target="convertKeysToCamelCase"): a(href="#convertKeysToCamelCase")
          i.icon-chevron-right
          | convertKeysToCamelCase
        li(mac-scroll-spy-target="convertKeysToSnakeCase"): a(href="#convertKeysToSnakeCase")
          i.icon-chevron-right
          | convertKeysToSnakeCase
        li(mac-scroll-spy-target="pythagoras"): a(href="#pythagoras")
          i.icon-chevron-right
          | Pythagoras
        li(mac-scroll-spy-target="degrees"): a(href="#degrees")
          i.icon-chevron-right
          | Radian to Degrees
        li(mac-scroll-spy-target="radian"): a(href="#radian")
          i.icon-chevron-right
          | Degrees to Radian
        li(mac-scroll-spy-target="hex2rgb"): a(href="#hex2rgb")
          i.icon-chevron-right
          | HEX to RGB
        li(mac-scroll-spy-target="validateUrl"): a(href="#validateUrl")
          i.icon-chevron-right
          | validateUrl
        li(mac-scroll-spy-target="validateEmail"): a(href="#validateEmail")
          i.icon-chevron-right
          | validateEmail
        li(mac-scroll-spy-target="getQueryString"): a(href="#getQueryString")
          i.icon-chevron-right
          | getQueryString
        li(mac-scroll-spy-target="parseUrlPath"): a(href="#parseUrlPath")
          i.icon-chevron-right
          | parseUrlPath


    #example.span9
      section#element(mac-scroll-spy-anchor)
        @@include("docs/html/main.html")

      section#pluralize(mac-scroll-spy-anchor)
        h3 pluralize
        pre.prettyprint(ng-non-bindable)
          | util.pluralize("apple", 5)
          | => "apples"
          | util.pluralize("apple", 10, true)
          | => "10 apples"

      section#capitalize(mac-scroll-spy-anchor)
        h3 capitalize
        p Converts first leter of the string to uppercase (Underscore string proxy)
        pre.prettyprint(ng-non-bindable)
          | util.capitalize("lowercase")
          | => "Lowercase"

      section#uncapitalize(mac-scroll-spy-anchor)
        h3 uncapitalize
        pre.prettyprint(ng-non-bindable)
          | util.uncapitalize("UPPERCASE")
          | => "uPPERCASE"

      section#toCamelCase(mac-scroll-spy-anchor)
        h3 toCamelCase
        pre.prettyprint(ng-non-bindable)
          | util.toCamelCase("a-string-with-dashes")
          | => "aStringWithDashes"

      section#toSnakeCase(mac-scroll-spy-anchor)
        h3 toSnakeCase
        pre.prettyprint(ng-non-bindable)
          | util.toSnakeCase("just another string")
          | => "just_another_string"

      section#convertKeysToCamelCase(mac-scroll-spy-anchor)
        h3 convertKeysToCamelCase
        p Convert all the keys in an object to camel case
        pre.prettyprint(ng-non-bindable)
          | util.toSnakeCase({'hello-world': 'test'})
          | => {'helloWorld': 'test'}

      section#convertKeysToSnakeCase(mac-scroll-spy-anchor)
        h3 convertKeysToSnakeCase
        p Convert all the keys in an object to snake case
        pre.prettyprint(ng-non-bindable)
          | util.toSnakeCase({'helloWorld': 'test'})
          | => {'hello_world': 'test'}

      section#pythagoras(mac-scroll-spy-anchor)
        h3 Pythagoras
        pre.prettyprint(ng-non-bindable)
          | util.pyth(3, 4)
          | => 5

      section#degrees(mac-scroll-spy-anchor)
        h3 Radian to Degrees
        pre.prettyprint(ng-non-bindable)
          | util.degrees(Math.PI)
          | => 180

      section#radian(mac-scroll-spy-anchor)
        h3 Degrees to Radian
        pre.prettyprint(ng-non-bindable)
          | util.radian(180)
          | => Math.PI

      section#hex2rgb(mac-scroll-spy-anchor)
        h3 HEX to RGB
        p Convert HEX color into RGB values
        pre.prettyprint(ng-non-bindable)
          | util.hex2rgb("#5331DE")
          | => {r: 83, g: 49, b: 222}

      section#validateUrl(mac-scroll-spy-anchor)
        h3 validateUrl
        p Parse url and break it into different components
        pre.prettyprint(ng-non-bindable)
          | util.validateUrl("http://www.example.com/macgyver/episodes")
          | => {domain: "com"
          |     name: "example"
          |     path: "/macgyver/episodes"
          |     port: undefined
          |     protocol: "http://"
          |     subdomain: "www"
          |     url: "http://www.example.com/macgyver/episodes"}

      section#validateEmail(mac-scroll-spy-anchor)
        h3 validateEmail
        pre.prettyprint(ng-non-bindable)
          | util.validateEmail("user@example.com")
          | => true

      section#getQueryString(mac-scroll-spy-anchor)
        h3 getQueryString
        pre.prettyprint(ng-non-bindable)
          | util.getQueryString("http://www.example.com/macgyver?season=1&episode=3&time=12:23", "episode")
          | => 3

      section#parseUrlPath(mac-scroll-spy-anchor)
        h3 parseUrlPath
        pre.prettyprint(ng-non-bindable)
          | util.parseUrlPath("http://www.example.com/macgyver?season=1&episode=3&time=12:23")
          | => {fullPath: "http://www.example.com/macgyver?season=1&episode=3&time=12:23",
          |     path: "http://www.example.com",
          |     pathComponents: [
          |       "http:",
          |       "",
          |       "www.example.com",
          |       "macgyver"
          |     ],
          |     verb: "macgyver",
          |     queries: {
          |       season: "1",
          |       episode: "3",
          |       time: "12:23"
          |     }
          |   }
