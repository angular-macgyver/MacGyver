      &lt;mac-modal id=&quot;test-modal&quot; mac-modal-keyboard&gt;
        &lt;div ng-controller=&quot;modalController&quot; class=&quot;modal-content&quot;&gt;
          &lt;h1&gt;Just another modal&lt;/h1&gt;
        &lt;/div&gt;
      &lt;/mac-modal&gt;
